<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LearningManagementSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LearningManagementSystem"
     xmlns:view="clr-namespace:LearningManagementSystem.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Landing Page"
        ContentTemplate="{DataTemplate view:LandingPage}"
        Route="LandingPage" />
    <ShellContent
        Title="Student List"
        ContentTemplate="{DataTemplate view:StudentListPage}"
        Route="StudentListPage" />
    <ShellContent
        Title="Add Student"
        ContentTemplate="{DataTemplate view:AddStudentPage}"
        Route="AddStudentPage" />

</Shell>
